PORT=3000
NODE_ENV=production
CLIENT_ORIGIN=https://www.adrianairia.pt

# Google OAuth (replace with your actual credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://www.adrianairia.pt/auth/callback
GOOGLE_REDIRECT_URI=https://www.adrianairia.pt/auth/callback
ADMIN_EMAIL=your-admin-email
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Required security settings
ENCRYPTION_KEY=adriana-secure-encryption-key-2025-minimum-32-chars
TRUST_PROXY_HOPS=1

# Copy to .env.local and fill in the values for your environment

# Timezone and working hours
HOST_TZ=Europe/London
WORKING_DAYS=MON-FRI
WORKING_HOURS=09:00-17:00
BOOKING_SLOT_MINUTES=30

# Database
POSTGRES_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# API endpoints
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_FORMSPREE_ID=your-formspree-id

# Google Calendar
GOOGLE_CALENDAR_ID=your-calendar-id